<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hunguigu.dao.StaffDao">
    <resultMap id="staffmap" type="Staff">
        <collection property="role" javaType="Role"
                    column="role_id" select="com.hunguigu.dao.RoleDao.queryById"
                    fetchType="lazy">
        </collection>
    </resultMap>

    <select id="query" parameterType="Staff" resultMap="staffmap">
        SELECT
        `id`,
        `name`,
        `account`,
        `password`,
        `role_id`,
        `remark`
        FROM
        `sk_item`.`staff`
        <where>
            <if test="name!=null">and name like concat('%',#{name},'%')</if>
        </where>
    </select>

    <select id="queryById" parameterType="int" resultMap="staffmap">
    SELECT
  `id`,
  `name`,
  `account`,
  `password`,
  `role_id`,
  `remark`
FROM
  `sk_item`.`staff`
WHERE `id` = #{id}

  </select>

    <select id="queryTotal" parameterType="Staff" resultType="int">
        SELECT
        count(*)
        FROM
        `sk_item`.`staff`
        <where>
            <if test="name!=null">and name like concat('%',#{name},'%')</if>
        </where>
    </select>

    <insert id="insert" parameterType="Staff">

INSERT INTO `sk_item`.`staff` (
  `id`,
  `name`,
  `account`,
  `password`,
  `role_id`,
  `remark`
)
VALUES
  (
    #{id},
    #{name},
    #{account},
    #{password},
    #{role.id},
    #{remark}
  )
    </insert>

    <delete id="delete" parameterType="int">
DELETE
FROM
  `sk_item`.`staff`
WHERE `id` = #{id}

    </delete>

    <update id="update" parameterType="Staff">
UPDATE
  `sk_item`.`staff`
SET
  `name` = #{name},
  `account` = #{account},
  `password` = #{password},
  `role_id` = #{role.id},
  `remark` = #{remark}
WHERE `id` = #{id}

    </update>

</mapper>